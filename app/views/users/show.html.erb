<% if logged_in? %>
  <div class="row">
    <%= "#{@user.first_name} #{@user.last_name}" %>, <%= @user.email %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= form_for(Product.new) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <%= f.submit "Sell", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <p>Your products that are not yet sold:</p>
  <div class="row">
    <table class="table table-striped">
      <tr>
        <th>Product</th>
        <th>Date Posted</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
      <% current_user.sales.each do |sale| %>
        <tr>
          <td><%= sale.name %></td>
          <td><%= sale.created_at %></td>
          <td><%= sale.price %></td>
          <td><%=  %></td>
        </tr>
      <% end %>
    </table>

  <div>
<% else %>
  <p>Looks like you're not logged in. Sign up or log in <%= link_to "here", "/login" %>.</p>
<% end %>
